<IfModule mod_rewrite.c>
    RewriteEngine On 


    RewriteRule ^([a-zA-Z0-9]+)$ index.php?pagina=$1

    # Redirigir las solicitudes con extensi칩n ".php" eliminada a la versi칩n con extensi칩n
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^(.*)$ $1.php [L]

    # Evitar el acceso directo a los archivos locales
    Options -Indexes

    # Redireccionar a la p치gina de error 404
    ErrorDocument 404 62.72.0.107/404.php
</IfModule>


